<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lucias Hotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestdrivenHotel.UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header id="header">
        
        <nav id="nav ul li" class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <div id="logo">
                    <img src="" />
                    <a class="navbar-brand" asp-area="" asp-page="/Index"> LUCIASHOTEL</a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
 
                <div id="navigation">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Explore">Explore</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/About">about</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contact">Contact</a>
                        </li>
                        
                        <li> <i class="fa fa-search"></i> </li>

                        <li> <button class="primary-btn">BOOK NOW</button> </li>
                        
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <div class="text-center">
            <h1 class="display-4">Welcome to Lucias Hotel</h1>
            <img src="\TestdrivenHotel.UI\Img\bakgrund_Image.webp" alt="" />
        </div>

        <main role="main" class="pb-3" class="container-fluid">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TestdrivenHotel - <a asp-area="" asp-page="/About">About</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>